<!DOCTYPE html>
<html>
<head>
	<title>Night Studio Sign-up</title>
	<link rel="stylesheet" href="bootstrap.min.css">
	<script src="jquery-3.3.1.slim.min.js"></script>
	<script src="popper.min.js"></script>
	<script src="bootstrap.min.js"></script>
	<link rel="stylesheet" href="style.css">
	<script>
		var form = document.getElementById("checkform");
		// var submitBtn = document.getElementById("sugnupsubmit");
		// form.addEventListener("submit", function(e) {
		// 				// 禁用提交按钮
		// 	submitBtn.disabled = true;
		// });
		form.addEventListener('click', _.throttle(save, 300))

	</script>
</head>
<body>

	<img src="back-logo-black.png" onclick="goBack()">
	<p>Night Studio Sign-up</p>
	<div class="row">
		<span class="col-md-2 col-lg-2 col-sm-0"></span>
		<div class="col-md-8 col-lg-8 col-sm-12">
			<form action="submit" method="get" id="checkform">
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text">First & Last Name</span>
					</div>
					<input type="text" name="firstName" aria-label="First name" placeholder="First Name" class="form-control" required>
					<input type="text" name="lastName" aria-label="Last name" placeholder="Last Name" class="form-control" required>
				</div>
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text">Student ID</span>
					</div>
					<input type="text" name="studentID" aria-label="Student ID" placeholder="Student id" class="form-control" required>
				</div>
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text">Class</span>
					</div>
					<select class="custom-select" id="inputGroupSelect01" name="studentclass" required>
						<option value>Select your class...</option>
						<option value="Art Foundations">Art Foundations</option>
						<option value="Mixed Media 2D">Mixed Media 2D</option>
						<option value="Mixed Media 3D">Mixed Media 3D</option>
						<option value="Graphic Design">Graphic Design</option>
						<option value="Ceramics">Ceramics</option>
						<option value="Pre-AP Visual Arts">Pre-AP Visual Arts</option>
						<option value="AP Studio Art">AP Studio Art</option>
					</select>
				</div>
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<label class="input-group-text" for="inputGroupSelect01">Grade</label>
					</div>
					<select class="custom-select" id="inputGroupSelect01" name="grade" required>
						<option value>Select your grade...</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</select>
				</div>
				<div class="input-group">
					<div class="input-group-prepend">
						<span class="input-group-text">Purpose</span>
					</div>
					<select class="custom-select form-control" id="inputGroupSelectpurpose" name="purpose" aria-label="Purpose Info" placeholder="Info of the Purpose" required>
						<option value>Select your purpose...</option>
						<option value="Formative">Formative</option>
						<option value="Summative">Summative</option>
						<option value="Personal project">Personal project</option>
					</select>
				</div>
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<label class="input-group-text" for="inputGroupSelect">Time Period</label>
					</div>
					<div class="custom-checkbox form-control">
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="true" name="seventoeight">
							<label class="form-check-label" for="inlineCheckbox1"> 7-8 p.m - <%= firstPeriodCount %>/30</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="true" name="eighttonine">
							<label class="form-check-label" for="inlineCheckbox2">8-9 p.m - <%= secondPeriodCount %>/30</label>
						</div>
					</div>
				</div>
				<button type="submit" class="btn btn-outline-info btn-lg btn-block mb-2" id="sugnupsubmit">Submit</button>
			</form>
		</div>
		<span class="col-md-2 col-lg-2 col-sm-0"></span>
	</div>

</body>
<script>
</script>
</html>